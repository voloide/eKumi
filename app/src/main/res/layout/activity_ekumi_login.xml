<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.login.EkumiLoginActivity">

    <data class="EkumiLoginActivityBinding">
        <variable
            name="viewmodel"
            type="mz.co.insystems.service.ekumi.activities.login.LoginViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_background">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/inputs"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:padding="@dimen/layout_content_padding">

                <ImageView
                    android:layout_width="@dimen/user_registration_imview_width"
                    android:layout_height="@dimen/user_registration_imview_heigth"
                    android:layout_marginBottom="@dimen/dimen_70dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_pin_01"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        app:errorTextAppearance="@style/TextAppearence.App.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtPin01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            android:textAlignment="center"
                            android:text="@{viewmodel.user.pin}"
                            style="@style/pin_edit_text_style"
                            >
                            <requestFocus />
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/user_forgotten_pass_link_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_30dp"
                    android:layout_marginBottom="@dimen/dimen_14dp"
                    android:onClick="@{() -> viewmodel.initPasswordReset()}"
                    style="@style/user_login_links"
                    android:text="@string/user_forgotten_pass_link_text" />

                <TextView
                    android:id="@+id/user_registration_link_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_14dp"
                    style="@style/user_login_links"
                    android:onClick="@{() -> viewmodel.initNewUserCreation()}"
                    android:text="@string/user_registration_link_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_14dp"
                    style="@style/user_login_links"
                    android:text="@string/or" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_google"
                        android:padding="@dimen/dimen_5dp"
                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_twitter"
                        android:padding="@dimen/dimen_5dp"
                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_facebook"
                        android:padding="@dimen/dimen_5dp"
                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_instagram"
                        android:padding="@dimen/dimen_5dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fullscreen_content_controls"
                style="?metaButtonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/black_overlay"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/btnLogin"
                    style="?metaButtonBarButtonStyle"
                    android:textColor="@drawable/button_text_color"
                    android:background="@drawable/button_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewmodel.login()}"
                    android:text="@string/login_text" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>